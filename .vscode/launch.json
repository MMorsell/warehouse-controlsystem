    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Hive",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/theHive/app",
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "Starting Web server",
                "uriFormat": "http://localhost:8000"
            }
        },
        {
            "name": "Launch wall-e bot",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/walle/Robot/app"
        },
        {
            "name": "Launch fake client",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/theHive/testClient"
        }

    ],
    "compounds": [
        {
            "name": "Server + Client",
            "configurations": ["Launch Hive", "Launch wall-e bot"],
            "stopAll": true
        },
        {
            "name": "Server + fake",
            "configurations": ["Launch Hive", "Launch fake client"],
            "stopAll": true
        }
    ]
}